<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/article_list_item_height"
    android:background="@color/white"
    android:paddingLeft="@dimen/article_list_item_padding_side"
    android:paddingRight="@dimen/article_list_item_padding_side"
    android:paddingTop="@dimen/article_list_item_padding_top_bottom"
    android:paddingBottom="@dimen/article_list_item_padding_top_bottom"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_article_main"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:layout_width="@dimen/article_image_width"
        android:layout_height="@dimen/article_list_item_height"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_article_place_holder"/>

    <TextView
        android:id="@+id/tv_article_launch_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="10/12/2017"
        android:textSize="@dimen/article_launch_date_text_size"
        android:fontFamily="sans-serif-light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mini_list_date_text_color"/>

    <LinearLayout
        android:layout_toRightOf="@id/iv_article_main"
        android:layout_marginLeft="@dimen/article_list_item_padding_side"
        android:layout_toLeftOf="@id/tv_article_launch_date"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:fontFamily="sans-serif"
            android:text="@string/article_title_sample"
            android:textSize="@dimen/article_list_item_content_text_size"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tv_content"
            android:text="@string/article_details_sample"
            android:textSize="@dimen/article_list_item_details_text_size"
            android:maxLines="2"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_article_main"
            android:textColor="@color/unselected_gray"
            />
    </LinearLayout>



</RelativeLayout>