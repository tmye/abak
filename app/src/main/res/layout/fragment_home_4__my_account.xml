<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_container"
    android:paddingTop="?actionBarSize"
    android:layout_marginBottom="?actionBarSize"
    tools:context="tg.experta.kaba.activities.Home.Fragmentz.Home_4_MyAccount">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/account_top_height"
        android:background="@color/selected_yellow">

        <android.support.design.widget.CollapsingToolbarLayout
            app:titleEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_commander"
                    app:border_color="@color/white"
                    app:border_overlay="true"
                    app:border_width="@dimen/myaccount_pic_border_width" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_height="120dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="@dimen/food_details_tag_margin"
                        android:maxLines="1"
                        android:gravity="left"
                        android:text="KABAVI ADJO"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="40sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/food_details_tag_margin"
                        android:maxLines="1"
                        android:text="90 03 07 95"
                        android:gravity="left"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-thin"
                        app:autoSizeMaxTextSize="30sp"
                        app:autoSizeMinTextSize="16sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform" />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/account_top_height"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_myaccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/activity_horizontal_margin_half">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin_half"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/bottom_line_background"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/iv_myaccount_horoscope_sun_moon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_myaccount_horoscope_sun"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="bottom|right"
                                android:textSize="20sp"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                                android:fontFamily="sans-serif"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="12sp"
                                app:autoSizeMaxTextSize="22sp"
                                app:autoSizeStepGranularity="1sp"
                                android:gravity="bottom|right"
                                android:text="@string/your_horoscope"
                                android:textColor="@color/black" />
                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_myaccount_horoscope_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:autoSizeTextType="uniform"
                                app:autoSizeMinTextSize="8sp"
                                app:autoSizeMaxTextSize="30sp"
                                app:autoSizeStepGranularity="1sp"
                                android:fontFamily="sans-serif-thin"
                                android:layout_gravity="bottom|left"
                                android:gravity="bottom|left"
                                android:text="Monday, 12 January 2018"
                                android:textColor="@color/black" />
                        </android.support.v7.widget.LinearLayoutCompat>

                    </android.support.v7.widget.LinearLayoutCompat>

                    <TextView
                        android:id="@+id/tv_horoscope_message"
                        android:textColor="@color/horoscope_blue"
                        android:background="@drawable/tv_horoscope_message_background"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/my_horoscope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin_half"
                        android:paddingRight="@dimen/activity_horizontal_margin_half"/>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
