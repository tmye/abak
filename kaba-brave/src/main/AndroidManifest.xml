<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tg.tmye.kaba">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <!-- wave lock -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- receive sms -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.back"
        android:required="false" />

    <application
        android:name=".syscore.MyKabaApp"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/kaba_icon_rectangle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/kaba_icon"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.home.HomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Splash.SplashActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.menu.RestaurantMenuActivity"
            android:label="@string/title_activity_restaurant_menu"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.FoodDetails.FoodDetailsActivity"
            android:label="@string/title_activity_food_details"
            android:parentActivityName=".activity.menu.RestaurantMenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Web.WebActivity"
            android:label="@string/title_activity_web"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.UserAuth.register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.UserAuth.login.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.UserAcc.ServiceClientActivity"
            android:label="@string/title_activity_service_client" />
        <activity
            android:name=".activity.UserAcc.MyAdressesActivity"
            android:label="@string/title_activity_my_adresses"
            android:theme="@style/AppTheme.NoActionBar.Inverted" />
        <activity
            android:name=".activity.UserAcc.adresses.EditAddressActivity"
            android:label="@string/title_activity_edit_address"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/api_geo_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".activity.UserAcc.personnalinfo.PersonnalInfoActivity"
            android:label="@string/title_activity_personnal_info"
            android:theme="@style/AppTheme.NoActionBar.Inverted" />
        <activity
            android:name=".activity.UserAcc.feeds.FeedActivity"
            android:label="@string/title_activity_feed"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.UserAcc.cash_transaction.SoldeActivity"
            android:label="@string/title_activity_solde"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.cart.ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.search.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.SearchActivity" />
        <activity
            android:name=".activity.favorite.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.UserAcc.EditFieldActivity"
            android:label="@string/title_activity_edit_field"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.trans.ConfirmCommandDetailsActivity"
            android:label="@string/title_activity_confirm_command_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.command.CommandDetailsActivity"
            android:label="@string/title_activity_command_details" />

        <!-- notifications push services -->
        <service android:name=".service.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- notification job service -->
        <service
            android:name="._commons.notification.KabaNotificationJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <!-- facebook -->

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider{APP_ID}"
            android:exported="true" />

        <!-- others -->
        <activity
            android:name=".activity.WebArticle.WebArticleActivity"
            android:label=""
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.WebArticleTheme" />
        <activity
            android:name=".activity.restaurant.RestaurantActivity"
            android:label="@string/title_activity_restaurant"
            android:theme="@style/SaulTheme" />

        <!-- test activity -->
        <activity
            android:name=".activity.test.Test_NotificationActivity"
            android:label="@string/title_activity_test__notification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".brave.one.EmptyTestActivity" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@mipmap/kaba_icon" />
        <!--
             Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />
        <!--
         <receiver android:name=".activity.UserAuth.register.RegisterActivity$SmsBroadcastListener" android:enabled="true">
             <intent-filter>
                 <action android:name="android.provider.Telephony.SMS_RECEIVED" />
             </intent-filter>
         </receiver>
        -->
        <activity
            android:name=".activity.command.CommandHistoryActivity"
            android:label="@string/title_command_history" />
        <activity android:name=".activity.ad_categories.best_seller.BestSellerActivity" />
        <activity android:name=".activity.ad_categories.evenements.EvenementActivity" />
        <activity
            android:name=".activity.UserAcc.cash_transaction.ConfirmPayActivity"
            android:label="@string/activity_confirm_pay"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.UserAcc.cash_transaction.TransactionHistoryActivity" />
        <activity
            android:name=".activity.UserAuth.getbackpassword.ForgotPasswordActivity"
            android:label="@string/recover_password" />
        <activity
            android:name=".activity.UserAcc.cash_transaction.TopUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">

            <!--
              <intent-filter>
                  <action android:name="android.intent.action.MAIN" />
                  <category android:name="android.intent.category.LAUNCHER" />
              </intent-filter>
            -->

        </activity>
        <activity android:name=".activity.settings.SettingsActivity" />
        <activity android:name=".activity.about.AboutActivity" />
        <activity android:name=".activity.terms_and_condition.TermsAndConditionsActivity" />
        <activity android:name=".activity.appinfo.AppInfoActivity" />
        <activity android:name=".activity.faq.FaqActivity" />
        <activity android:name=".activity.ImagePreviewActivity" />
        <activity android:name=".activity.UserAcc.cash_transaction.TopUpWebActivity" />
        <activity android:name=".activity.Splash.KabaPreviewSlidingActivity"></activity>
    </application>

</manifest>