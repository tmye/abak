<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>

    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <!-- <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowBackground">@android:color/transparent</item>
         <item name="android:windowContentOverlay">@null</item>
         <item name="android:windowNoTitle">true</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:backgroundDimEnabled">true</item>-->
    </style>

    <!-- Restaurant Menu Activity . -->
    <style name="RestaurantMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_rm</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_rm</item>
        <item name="colorAccent">@color/colorAccent_rm</item>
    </style>


    <style name="RestaurantMenu.TabStrip" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="AppTheme.NoActionBar.Inverted">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary_rm</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_rm</item>
        <item name="colorAccent">@color/colorAccent_rm</item>

        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TransparentActionBar">
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/colorAccent_rm</item>
    </style>


    <style name="AppTheme.WebArticleTheme" parent="AppTheme.NoActionBar">
        <!--<item name="android:colorControlActivated">@color/colorPrimary</item>-->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.CheckBox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


    <style name="RestaurantMenu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.MainToolbar" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textCursorDrawable">@drawable/white_text_cursor_drawable</item>
        <item name="android:background">@color/transparent</item>
    </style>
    <!-- <strestaurant_namename="AppTheme.MainToolbar">
        <irestaurant_namename="android:textCursorDrawable">@drawable/white_text_cursor_drawable</item>
    </style>
-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextStyle" parent="TextAppearance.AppCompat"></style>

    <style name="AppTheme.SearchActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#dbdbdb</item>
    </style>

    <style name="TextStyle.LoginTitle" parent="TextStyle">
        <item name="android:textColor">@color/gray_login_title_color</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
    </style>

    <style name="TextStyle.LoginField.WithNoMargintop" parent="TextStyle">
        <item name="android:background">@color/gray_login_field_background_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/login_field_text_size</item>
        <!--<irestaurant_namename="android:textColor">@color/gray_login_field_text_color</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyle.LoginField" parent="TextStyle">
        <item name="android:layout_marginTop">@dimen/edittext_margintop_24</item>
        <item name="android:layout_marginBottom">@dimen/edittext_margintop_24</item>
        <item name="android:background">@color/gray_login_field_background_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/login_field_text_size</item>
        <!--<irestaurant_namename="android:textColor">@color/gray_login_field_text_color</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ToolBar transparent -->
    <style name="Toolbar.Transparent" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@color/transparent_white</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!-- ToolBar non-transparent + red text -->
    <style name="Toolbar.WhiteRedText" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Button.Confirm" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/selected_yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Cancel" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="nice_showup_error_textstyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/nice_error_text_size</item>
    </style>


    <!-- alert dialog custom -->
    <style name="AlertDialogCustom" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.Transaction" parent="AppTheme" >

    </style>

    <style name="AppTheme.Transaction.Password_Field"  parent="AppTheme.Transaction">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/trans_keyboard_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/transaction_pwd_field_height</item>
        <item name="android:maxWidth">@dimen/transaction_pwd_field_height</item>
        <item name="android:minHeight">@dimen/transaction_pwd_field_height</item>
        <item name="android:minWidth">@dimen/transaction_pwd_field_height</item>
        <item name="android:background">@drawable/transaction_pwd_bt_bg</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_quarter</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_quarter</item>
    </style>

    <style name="AppTheme.Transaction.Button"  parent="AppTheme.Transaction">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/trans_keyboard_textsize</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/transaction_pwd_bt_height</item>
        <item name="android:maxWidth">@dimen/transaction_pwd_bt_width</item>
        <item name="android:background">@drawable/transaction_pwd_bt_bg_reactive</item>
      <!--  <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_quarter</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_quarter</item>-->
    </style>

    <style name="AppTheme.Transaction.PayConfirmation">

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="settings_item_style">
        <item name="android:textColor">@color/black</item>
        <!--<item name="android:textStyle">re</item>-->
        <item name="android:textSize">@dimen/myaccount_settings_item_size</item>
    </style>

    <style name="settings_item_details_style">

        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/myaccount_settings_details_item_size</item>

    </style>

    <dimen name="transaction_pwd_bt_height">75dp</dimen>
    <dimen name="transaction_pwd_bt_width">160dp</dimen>

    <!-- no touch -->
    <dimen name="transaction_pwd_field_height">80dp</dimen>
    <dimen name="transaction_pwd_field_width">160dp</dimen>
    <dimen name="trans_keyboard_textsize">18sp</dimen>
    <dimen name="myaccount_settings_item_size">16sp</dimen>
    <dimen name="myaccount_settings_details_item_size">14sp</dimen>
</resources>
