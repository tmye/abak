<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin_half">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_toRightOf="@id/iv_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/very_light_gray"
            android:padding="@dimen/activity_horizontal_margin_half"
            android:layout_toEndOf="@id/iv_head">

            <TextView
                android:id="@+id/tv_title"
                android:text="@string/home"
                android:textAllCaps="true"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:textColor="@color/black_overlay"
                android:maxLines="2"
                android:textSize="17sp"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_adress_date"
                android:text="@string/details_adress_date"
                android:fontFamily="sans-serif"
                android:gravity="left|center_vertical"
                android:textColor="@color/unselected_gray"
                android:layout_width="match_parent"
                android:textSize="13sp"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_adress_details"
                android:text="@string/details_adress_sample"
                android:gravity="left|center_vertical"
                android:textColor="@color/dark_gray"
                android:textSize="14sp"
                android:maxLines="2"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>

        <!--android:background="@drawable/ic_address_edit_blue_24dp"-->
        <!-- <Button
             android:id="@+id/bt_edit_address"
             android:text="@string/modify_address"
             android:textAllCaps="true"
             android:textColor="@color/facebook_blue"
             android:background="@drawable/bt_address_edit_drawable"
             android:textSize="@dimen/best_seller_day_textsize"
             android:layout_alignParentTop="true"
             android:layout_alignParentRight="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />-->
        <ImageView
            android:id="@+id/bt_edit_address"
            app:srcCompat="@drawable/ic_basket_content_edit_blue_24dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/activity_horizontal_margin_half"
        android:id="@+id/bottomdivider"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cic_newsfeed_image"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"/>

</android.support.v7.widget.LinearLayoutCompat>