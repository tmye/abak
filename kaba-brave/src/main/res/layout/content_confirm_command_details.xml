<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tg.tmye.kaba.activity.trans.ConfirmCommandDetailsActivity"
    tools:showIn="@layout/activity_confirm_command_details">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/menu_food_item_spacing"
            android:layout_marginLeft="@dimen/menu_food_item_spacing"
            android:layout_marginRight="@dimen/menu_food_item_spacing"
            android:layout_marginTop="@dimen/menu_food_item_spacing">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_items_to_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_select_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_pick_address_drawable_24dp"
            android:gravity="left"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Selectionner l'Adresse"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- then show selected address -->
        <RelativeLayout
            android:id="@+id/rel_address_preview"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:padding="@dimen/activity_horizontal_margin_half">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_address_title_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin_half"
                    android:text="Bureau"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_address_description_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin_half"
                    android:text="En Face de la Guare routière d'agbalepedogan"
                    android:textSize="13sp"
                    android:textColor="@color/dark_gray" />

            </android.support.v7.widget.LinearLayoutCompat>

            <ImageButton
                android:id="@+id/ib_delete_selected_address"
                android:background="@drawable/ic_delete_forever_red_24dp"
                android:src="@null"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_pay_arrival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Payer à l'Arriver"
                android:theme="@style/AppTheme.CheckBox" />
        </LinearLayout>

        <!-- purchase now -->
        <ImageButton
            android:id="@+id/ib_confirm_purchase_now"
            android:layout_width="@dimen/ic_command_right_way_size"
            android:layout_height="@dimen/ic_command_right_way_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/icon_commander" />


        <TextView
            android:id="@+id/tv_press_to_add_to_basket"
            android:text="@string/press_to_add_to_basket"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_gray"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- add to basket -->
        <ImageButton
            android:id="@+id/ib_confirm_add_to_basket"
            android:layout_width="@dimen/ic_command_right_way_size"
            android:layout_height="@dimen/ic_command_right_way_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/icon_white_circle"
            app:srcCompat="@drawable/ic_shopping_card_red_24dp" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v4.widget.NestedScrollView>
