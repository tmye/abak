<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:background="?selectableItemBackground">

        <ImageView
            android:id="@+id/iv_restaurant_theme_image"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/restaurant_list_item_bg_height" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/rounded_image_restaurant_logo_size_half_minus"
            android:layout_marginRight="@dimen/activity_horizontal_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_half"
            >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_restaurant_icon"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/rounded_image_restaurant_logo_size"
            android:layout_height="@dimen/rounded_image_restaurant_logo_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/kaba_pic"
            app:layout_constraintRight_toLeftOf="@id/view_separator"
            app:border_color="@color/circular_view_border_yellow"
            app:border_width="@dimen/restaurant_rounded_image_border_width"
            android:layout_gravity="center_vertical"/>

            <TextView
                android:maxLines="1"
                android:layout_marginTop="@dimen/rounded_image_restaurant_logo_size_half_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/restaurant"/>

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_gravity="center_horizontal"
                android:text="MARIAM"
                android:textColor="@color/restaurant_name_color"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_enter_restaurant"
                android:text="@string/enter_restaurant"
                android:textAllCaps="true"
                android:drawableTop="@drawable/ic_home_white_drawable"
                android:background="@drawable/transparent_green_red_rounded"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/command_total_padding"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/tv_enter_menu"
                android:text="@string/enter_menu"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:drawableTop="@drawable/ic_list_white_24dp"
                android:background="@drawable/transparent_white_red_rounded"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_horizontal_margin_half"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/command_total_padding"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/menu_header_spacing"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_restaurant_address"
                android:text="@string/restaurant_adress_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:layout_gravity="right"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>