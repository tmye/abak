<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin_half"
    android:padding="@dimen/activity_horizontal_margin_half">

    <LinearLayout
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin_half">
        <RelativeLayout
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_restaurant_icon"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/rounded_image_restaurant_logo_size"
                android:layout_height="@dimen/rounded_image_restaurant_logo_size"
                android:src="@drawable/kaba_pic"
                android:layout_centerHorizontal="true"
                app:layout_constraintRight_toLeftOf="@id/view_separator"
                app:border_color="@color/transparent"
                app:border_width="@dimen/restaurant_rounded_image_border_width"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_gravity="center_horizontal"
                android:text="MARIAM"
                android:layout_toRightOf="@+id/iv_restaurant_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"/>

            <TextView
                android:id="@+id/tv_restaurant_address"
                android:layout_gravity="center_horizontal"
                android:text="MARIAM"
                android:layout_toRightOf="@+id/iv_restaurant_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/dark_gray"
                android:layout_below="@id/tv_restaurant_name"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                />
        </RelativeLayout>

        <View
            android:id="@+id/view_separator"
            android:layout_marginTop="@dimen/activity_horizontal_margin_half"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_marginRight="@dimen/activity_horizontal_margin_half"
            android:background="@color/dark_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_is_open"
                android:layout_alignParentLeft="true"
                android:padding="@dimen/activity_horizontal_margin_quarter"
                android:textSize="@dimen/restaurant_distance_text_size"
                android:textColor="@color/white"
                android:background="@drawable/transparent_white_red_rounded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin_half"/>

            <TextView
                android:id="@+id/tv_distance"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/restaurant_distance_text_size"
                android:text="10km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin_quarter"
                android:layout_margin="@dimen/activity_horizontal_margin_half"/>

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>