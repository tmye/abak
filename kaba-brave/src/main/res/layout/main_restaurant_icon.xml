<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/restaurant_icon_padding"
    android:background="?selectableItemBackgroundBorderless">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_restaurant_icon"
        android:layout_width="@dimen/restaurant_icon_height"
        android:src="@drawable/kaba_pic"
        android:layout_height="@dimen/restaurant_icon_height" />

    <TextView
        android:id="@+id/tv_restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/restaurant_name_sample"
        android:textColor="@color/restaurant_name"/>

</android.support.v7.widget.LinearLayoutCompat>