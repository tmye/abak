<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/newsfeed_row_height"
    android:padding="@dimen/activity_horizontal_margin_half"
    android:background="?selectableItemBackground"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cic_newsfeed_image"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="@dimen/newsfeed_restaurant_image_size"
        android:layout_height="@dimen/newsfeed_restaurant_image_size" />

    <LinearLayout
        android:layout_toRightOf="@id/cic_newsfeed_image"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:maxLines="1"
            android:text="@string/restaurant_name_sample"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_description"
            android:maxLines="2"
            android:textSize="14sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/dark_gray"
            android:text="@string/feeds_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_created_at"
        android:layout_alignParentRight="true"
        android:gravity="bottom"
        android:text="24/05/2018"
        android:textSize="10sp"
        android:textColor="@color/dark_gray"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/activity_horizontal_margin_half"/>

    <View
        android:id="@+id/bottomdivider"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/cic_newsfeed_image"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"/>

</RelativeLayout>