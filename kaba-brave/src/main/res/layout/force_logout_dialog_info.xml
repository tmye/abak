<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/food_details_tag_padding_horizontal"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_drawable_icon"
        android:layout_width="@dimen/dialog_info_icon_size"
        android:layout_height="@dimen/dialog_info_icon_size"
        android:paddingTop="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_expire_black_24dp" />

    <TextView
        android:id="@+id/tv_message"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/activity_horizontal_margin_half"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/expiration_libelle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/tv_confirm"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/confirm_comingsoon"
            android:textColor="@color/white"
            android:background="@drawable/bt_expire_drawable"
            android:layout_width="@dimen/standard_button_width"
            android:textAllCaps="true"
            android:autoSizeTextType="uniform"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"/>


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>