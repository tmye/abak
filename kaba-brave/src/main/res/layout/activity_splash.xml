<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/full_screen_content"
    tools:context=".activity.Splash.SplashActivity">

    <ImageView
        android:id="@+id/iv_center_icon"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_kaba_main_red"
        android:layout_width="@dimen/rounded_image_restaurant_logo_size"
        android:layout_height="@dimen/rounded_image_restaurant_logo_size" />

    <TextView
        android:layout_marginTop="@dimen/activity_horizontal_margin_double"
        android:text="@string/slogan_kaba"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_center_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
