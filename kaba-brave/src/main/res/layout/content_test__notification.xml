<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tg.tmye.kaba.activity.test.Test_NotificationActivity"
    tools:showIn="@layout/activity_test__notification">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <Button
            android:text="Simple"
            android:onClick="simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Menu Update"
            android:onClick="menu_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Restaurant Promotion"
            android:onClick="resto_promotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:text="New Article"
            android:onClick="new_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:text="Command State"
            android:onClick="command_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v4.widget.NestedScrollView>