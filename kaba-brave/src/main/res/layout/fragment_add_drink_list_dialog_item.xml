<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="@dimen/restaurant_icon_padding">

    <ImageView
        android:id="@+id/iv_drink_icon"
        android:layout_width="@dimen/drink_icon_height"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_boisson_black_24dp"
        android:layout_height="@dimen/restaurant_icon_height" />

    <TextView
        android:id="@+id/tv_drink_name"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin_quarter"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:text="@string/drink_name_sample"
        android:autoSizeTextType="uniform"
        android:textSize="@dimen/drink_name_size"
        android:textColor="@color/selected_yellow"/>

    <TextView
        android:id="@+id/tv_drink_price"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin_quarter"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/drink_price_size"
        android:textStyle="bold"
        android:text="@string/drink_price_sample"
        android:textColor="@color/colorPrimary"/>

</android.support.v7.widget.LinearLayoutCompat>