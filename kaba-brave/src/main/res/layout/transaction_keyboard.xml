<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <!-- 1, 2, 3-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_1"
            android:text="1"
            android:tag="1"
            style="@style/AppTheme.Transaction.Button" />

        <Button
            android:id="@+id/bt_2"
            android:text="2"
            android:tag="2"
            style="@style/AppTheme.Transaction.Button"/>


        <Button
            android:id="@+id/bt_3"
            android:text="3"
            android:tag="3"
            style="@style/AppTheme.Transaction.Button" />


    </LinearLayout>

    <!-- 4, 5, 6 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_4"
            style="@style/AppTheme.Transaction.Button"
            android:text="4"
            android:tag="4"
          />

        <Button
            android:id="@+id/bt_5"
            style="@style/AppTheme.Transaction.Button"
            android:text="5"
            android:tag="5"
             />


        <Button
            android:id="@+id/bt_6"
            style="@style/AppTheme.Transaction.Button"
            android:text="6"
            android:tag="6"
            />

    </LinearLayout>

    <!-- 7, 8, 9 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_7"
            style="@style/AppTheme.Transaction.Button"
            android:text="7"
            android:tag="7"
             />

        <Button
            android:id="@+id/bt_8"
            android:text="8"
            android:tag="8"
            style="@style/AppTheme.Transaction.Button"
            />


        <Button
            android:id="@+id/bt_9"
            android:text="9"
            android:tag="9"
            style="@style/AppTheme.Transaction.Button"/>

    </LinearLayout>

    <!-- , 0, < -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:tag=""
              />


        <Button
            android:id="@+id/bt_0"
            style="@style/AppTheme.Transaction.Button"
            android:text="0"
            android:tag="0"
           />


        <Button
            android:id="@+id/bt_delete"
            android:textAllCaps="true"
            style="@style/AppTheme.Transaction.Button"
            android:text="@string/delete"
            android:tag="delete"
            />

    </LinearLayout>

</LinearLayout>