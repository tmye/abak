<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4.0dip"
    android:paddingBottom="4.0dip"
    android:orientation="horizontal"
    android:minHeight="48.0dip">

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_search_type_icon"
        android:background="?selectableItemBackground"
        android:visibility="invisible"
        android:layout_width="48.0dip"
        android:layout_height="match_parent"
        android:layout_marginLeft="4.0dip"
        app:srcCompat="@drawable/ic_actionbar_search_gray_24dp"
        android:scaleType="centerInside" />

    <TextView
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/text"
        android:background="?selectableItemBackground"
        android:paddingLeft="20.0dip"
        android:paddingRight="56.0dip"
        android:layout_width="0.0dip"
        android:layout_height="match_parent"
        android:maxLines="2" android:layout_weight="1.0"
        android:textIsSelectable="false"
        />

    <ImageView
        android:layout_gravity="end|center"
        android:id="@+id/iv_suggestion"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_edit_suggestion_gray_24dp"
        android:scaleType="centerInside"  />
</LinearLayout>
