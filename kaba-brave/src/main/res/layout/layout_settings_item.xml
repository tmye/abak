<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            app:srcCompat="@null"
            android:visibility="visible"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_icon"
            android:minHeight="60sp"
            android:background="?selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="..."
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/activity_horizontal_margin_half"
                android:paddingBottom="@dimen/activity_horizontal_margin_half"
                android:layout_height="wrap_content"
                style="@style/settings_item_style"/>

            <TextView
                android:id="@+id/tv_title_details"
                android:layout_below="@+id/tv_title"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_4_3"
                android:layout_alignParentLeft="true"
                android:text="..."
                android:layout_width="wrap_content"
                android:paddingTop="@dimen/activity_horizontal_margin_half"
                android:paddingBottom="@dimen/activity_horizontal_margin_half"
                android:layout_height="wrap_content"
                style="@style/settings_item_details_style"/>
        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>