<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <LinearLayout
        android:padding="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- rstaurant name -->
        <TextView

            android:id="@+id/tv_restaurant_name"
            android:layout_gravity="center_horizontal"
            android:text="LE PHENICIEN"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- picture and name of the food -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_food_item_height">

            <TextView
                android:id="@+id/tv_ranking"
                android:text="1."
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/ranking_textsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin_half"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_toRightOf="@+id/tv_ranking"
                android:id="@+id/iv_pic"
                android:layout_width="@dimen/menu_food_pic_size"
                android:layout_height="@dimen/menu_food_pic_size"
                android:layout_marginRight="@dimen/menu_food_item_spacing"
                android:layout_marginTop="@dimen/menu_food_item_spacing"
                android:layout_marginBottom="@dimen/menu_food_item_spacing"
                android:src="@drawable/placeholder_kaba"
                app:border_color="@color/colorPrimary"
                app:border_width="@dimen/restaurant_rounded_image_border_width" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_toLeftOf="@+id/tv_total_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_pic"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:text="MEDITERANEENNE"
                    android:textColor="@color/black"
                    android:textSize="@dimen/menu_food_item_name_font_size"
                    android:textStyle="bold" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="120dp"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/menu_header_spacing"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_food_price"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="1.000"
                        android:textStyle="bold"
                        android:textColor="@color/selected_yellow"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMinTextSize="6sp"
                        app:autoSizeMaxTextSize="30sp"
                        android:textSize="20sp"
                        app:autoSizeStepGranularity="1sp"
                        android:gravity="center_vertical|right"
                        />

                    <TextView
                        android:layout_gravity="top"
                        android:text="FCFA"
                        android:textColor="@color/selected_yellow"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        app:autoSizeMinTextSize="3sp"
                        app:autoSizeMaxTextSize="12sp"
                        android:textSize="10sp"
                        app:autoSizeStepGranularity="1sp"
                        app:autoSizeTextType="uniform"
                        />

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <LinearLayout
                android:id="@+id/lny_name_infos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:padding="@dimen/restaurant_icon_padding"
                android:orientation="horizontal">

            </LinearLayout>

            <!-- icon to show there is a growth. -->
