<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.readygo.DeliveryReadyActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:text="@string/you_are_currently_offline"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_go_online"
            android:background="@drawable/kaba_style_button"
            android:text="@string/go_online"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:textSize="22sp"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>