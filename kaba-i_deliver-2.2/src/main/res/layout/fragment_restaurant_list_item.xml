<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_horizontal_margin_half"
    android:padding="@dimen/activity_horizontal_margin_half">

    <RelativeLayout
        android:background="?selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin_half"
        android:paddingTop="@dimen/activity_horizontal_margin_half">
        <RelativeLayout
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_restaurant_icon"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/rounded_image_restaurant_logo_size"
                android:layout_height="@dimen/rounded_image_restaurant_logo_size"
                android:src="@drawable/kaba_pic"
                android:layout_centerHorizontal="true"
                app:border_color="@color/transparent"
                app:border_width="@dimen/restaurant_rounded_image_border_width"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_gravity="center_horizontal"
                android:text="MARIAM"
                android:layout_toRightOf="@+id/iv_restaurant_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:textColor="@color/kaba_red_color"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="2"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"/>

            <TextView
                android:id="@+id/tv_restaurant_address"
                android:layout_gravity="center_horizontal"
                android:text="MARIAM"
                android:layout_toRightOf="@+id/iv_restaurant_icon"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:textColor="@color/dark_gray"
                android:layout_below="@id/tv_restaurant_name"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                />


        </RelativeLayout>

        <ImageButton
            android:id="@+id/iv_call"
            android:background="@drawable/ic_baseline_local_phone_24"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentTop="true"
            android:layout_width="30dp"
android:layout_marginTop="4dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>