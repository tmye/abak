<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="@dimen/activity_horizontal_margin_half"
    android:paddingBottom="@dimen/activity_horizontal_margin_half"
    >

    <TextView
        android:layout_weight="4"
        android:id="@+id/tv_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:textColor="@color/black"
        android:textSize="@dimen/menu_food_item_name_font_size"
        android:padding="5dp"
        android:gravity="center_vertical|left"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_food_promotion_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="---"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginRight="@dimen/activity_horizontal_margin_half"
        android:gravity="center_vertical|right"
        />

    <TextView
        android:id="@+id/tv_food_price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="---"
        android:textStyle="bold"
        android:textColor="@color/selected_yellow"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="6sp"
        app:autoSizeMaxTextSize="40sp"
        android:textSize="25sp"
        app:autoSizeStepGranularity="1sp"
        android:gravity="center_vertical|right"
        />

    <LinearLayout
        android:id="@+id/lny_name_infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
        android:layout_marginRight="@dimen/activity_horizontal_margin_half"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/black"
            android:textSize="@dimen/x_times_text_height"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x_times_count_text_height"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>