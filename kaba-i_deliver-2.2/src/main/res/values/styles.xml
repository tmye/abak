<resources>


    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat"></style>


    <style name="TextStyle.LoginTitle" parent="TextStyle">
        <item name="android:textColor">@color/gray_login_title_color</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.LoginField" parent="TextStyle">
        <item name="android:layout_marginTop">@dimen/edittext_margintop_24</item>
        <item name="android:background">@color/gray_login_field_background_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/login_field_text_size</item>
        <!--<item name="android:textColor">@color/gray_login_field_text_color</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyle.AmountField" parent="TextStyle">
        <item name="android:background">@color/gray_login_field_background_color</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:textColor">@color/gray_login_field_text_color</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TextStyle.AmountField.Order" parent="TextStyle.AmountField">
<!--        <item name="android:background">@color/kaba_red_color</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="android:textSize">16sp</item>-->
    </style>

    <style name="TextStyle.AmountField.Left" parent="TextStyle.AmountField">
<!--        <item name="android:background">@color/colorPrimary</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="android:textSize">16sp</item>-->
    </style>

    <style name="TextStyle.AmountField.Given" parent="TextStyle">
<!--        <item name="android:background">@color/silver_blue</item>-->
<!--        <item name="android:textColor">@color/white</item>-->
<!--        <item name="android:textSize">16sp</item>-->
    </style>


    <style name="AppTheme.Button.Confirm" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/selected_yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.DownloadKaba" parent="AppTheme">
        <item name="android:background">@color/kaba_red_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Cancel" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="helperTextAppearance_green">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="helperTextAppearance_red">
        <item name="android:textColor">@color/kaba_red_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="helperTextAppearance_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>


</resources>
