<resources>


    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Base.Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat"></style>


    <style name="TextStyle.LoginTitle" parent="TextStyle">
        <item name="android:textColor">@color/gray_login_title_color</item>
        <item name="android:textSize">@dimen/login_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.LoginField" parent="TextStyle">
        <item name="android:layout_marginTop">@dimen/edittext_margintop_24</item>
        <item name="android:background">@color/gray_login_field_background_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/login_field_text_size</item>
        <!--<item name="android:textColor">@color/gray_login_field_text_color</item>-->
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Button.Confirm" parent="AppTheme">
        <item name="android:colorButtonNormal">@color/selected_yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.Cancel" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomNavigation">

       <!-- <item name="android:background">@color/kaba_red_color</item>
        <item name="itemBackground">@drawable/navigation_bar_item_bg</item>
        <item name="itemIconTint">@color/kaba_red_color</item>
        <item name="itemTextColor">@color/kaba_red_color</item>
        <item name="paddingStart">@dimen/bottom_navigation_padding</item>
        <item name="paddingEnd">@dimen/bottom_navigation_padding</item>
-->
    </style>

    <color name="navigation_bar_txt_color">@color/kaba_red_color</color>
    <dimen name="bottom_navigation_padding">4dp</dimen>

    <style name="AppTheme.GraybgField"  parent="AppTheme">

        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/transaction_pwd_bt_bg_reactive</item>
        <!--  <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin_quarter</item>
          <item name="android:layout_marginRight">@dimen/activity_horizontal_margin_quarter</item>-->
    </style>

</resources>
